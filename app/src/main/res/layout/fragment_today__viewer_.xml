<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Today_Viewer_Fragment">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarketsans_medium"
                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:text="오늘의 기록"
                android:layout_gravity="bottom"
                android:textColor="@color/black"
                android:textSize="8pt" />
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/today_icon" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="4,820"
            android:textSize="8pt"
            android:paddingRight="20dp"
            android:gravity="right|center"
            android:fontFamily="@font/gmarketsans_bold"
            android:textColor="@color/white"
            android:background="@drawable/today_calorie" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:elevation="2dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/today_water_icon"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:textSize="7pt"
                    android:text="수분섭취"
                    android:textColor="@color/select_color"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:textSize="8pt"
                    android:gravity="right"
                    android:text="리터"
                    android:textColor="@color/waterback_color"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/gmarketsans_bold"
                    android:textSize="8pt"
                    android:gravity="right"
                    android:text="0.5"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:elevation="2dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/today_walk_icon"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:textSize="7pt"
                    android:text="만보기"
                    android:textColor="@color/walk_color"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:textSize="8pt"
                    android:gravity="right"
                    android:text="리터"
                    android:textColor="@color/walkback_color"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/gmarketsans_bold"
                    android:textSize="8pt"
                    android:gravity="right"
                    android:text="0.5"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:elevation="2dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/today_stretching"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:textSize="7pt"
                    android:text="수분섭취"
                    android:textColor="@color/stretching_color"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:textSize="8pt"
                    android:gravity="right"
                    android:text="리터"
                    android:textColor="@color/stretchingback_color"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/gmarketsans_bold"
                    android:textSize="8pt"
                    android:gravity="right"
                    android:text="0.5"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>